<h3>Product Details</h3>
<p>
  <%= f.label :product %><br>
  <%= f.collection_select(:product_id, Product.order(:name), :id, :name, {:include_blank => "Please select"}) %>
</p>
<p>
  <%= f.label :quantity %><br>
  <%= f.text_field :quantity %>
</p>
<p>
  <%= f.check_box :_destroy %>
  <%= f.label :_destroy, "Remove Product" %>
 </p>
