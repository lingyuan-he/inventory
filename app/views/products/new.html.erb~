<h1> Add New Product </h1>
<%= form_for :product, url: products_path do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited
        this product from being saved:</h2>
      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :manufacturer %><br>
    <%= f.select(:manufacturer, ["Please Select", @manufacturers]) %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :quantity_sold %><br>
    <%= f.text_field(:quantity_sold, :value => "0") %>
  </p>
  <p>
    <%= f.label :quantity_left %><br>
    <%= f.text_field(:quantity_left, :value => "0") %>
  </p>
  <p>
    <%= f.label :archived %><br>
    <%= f.select(:archieved, [['Yes', true], ['No', false]]) %>
  <p>
    <%= f.submit %>
  </p>
<% end %>
